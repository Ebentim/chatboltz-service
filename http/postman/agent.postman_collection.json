              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"name\": \"Customer Support Agent\",\n  \"description\": \"AI agent for Academic Support\",\n  \"ai_model\": \"gpt-4\",\n  \"ai_provider\": \"openai\",\n  \"agent_type\": 0,\n  \"credits_per_1k\": 10,\n  \"status\": \"active\"\n}"
            },
            "url": {
