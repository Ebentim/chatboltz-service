{
  "info": {
    "name": "Helix BE - OTP Module",
    "description": "OTP (One-Time Password) endpoints for Helix Backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Generate OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"purpose\": \"email_verification\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/otp/generate",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "otp", "generate"]
        }
      }
    },
    {
      "name": "Verify OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"otp_code\": \"123456\",\n  \"purpose\": \"email_verification\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/otp/verify",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "otp", "verify"]
        }
      }
    }
  ]
}